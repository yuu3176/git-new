<h2>New book</h2>
<div class="errors">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors has occurred
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <lavel>Title</lavel><br>
  <%= f.text_field :title %><br>

  <lavel>Body</lavel><br>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>
<% end %>