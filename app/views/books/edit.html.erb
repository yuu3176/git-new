<h1>Editing Book</h1>
<div class="errors">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors has occurred
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @book do |f| %>
  <p class="edit_title">Title</p>
  <%= f.text_field :title %>
  <p class="edit_body">Body</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit "Update Book" %>
<% end %>
<p class="edit_show"><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books" %></p>